@{
    ViewBag.Title = "UnivDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UnivHome</title>
    <link href="~/Content/themes/base/minified/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>
</head>

@section UnivDetail
{
<body>
    <div class="row">
        <div class="col-md-8">
    <span>@Model.Name</span>
    
        <div class="row">
            <img src="~/images/@Model.Image" width="100" height="100" />
           
        </div>
        
        <div class="row">
            <h2>Description</h2>
            <p class="bg-success">@Model.Description </p>
        </div>
        
        <div class="row">
            <h2>Degree</h2>
            <p class="bg-success">@Model.Degree </p>
        </div>

        <div class="row">
            <h2>Recent Merit</h2>
            <p class="bg-success">@Model.Merit2 </p>
        </div>
        <div class="row">
            <h2>Apply Online</h2>

            <form action="/Home/Apply/@Model.Id">


                <input type="submit" value="Apply" />

            </form>
            


            <form action="/Home/SendMessage/@Model.Id">

              
               <br/> <input type="submit" value="Send Message" class="btn btn-success" />

            </form>
        </div>
</div>
    
        <div class="col-md-4">
            <div class="list-group">
                <a class="list-group-item active"> Departments</a>
                @foreach (string s in ViewBag.dept)
                {
                    <a  href="~/Home/SearchDegree/?Degree=@s" class="list-group-item">@s</a>
                }

            </div>
        </div>


    </div>
</body>
    }
</html>


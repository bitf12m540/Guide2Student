@{
    ViewBag.Title = "SuggestedUniv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>myPage</title>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/themes/base/minified/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>





</head>
@section SuggestedUniv
{
    <body>
        <div class="row">
            <div class="col-md-8">
                <div class="grid_12">


                    <!-- Example table -->
                    <div class="module">
                        <h2><span>Your Chances of Getting Admission </span></h2>

                        <div class="module-table-body">

                            <table id="myTable" class="tablesorter" border="1">
                                <thead>
                                    <tr>
                                        <th style="width:5%">#</th>
                                        <th style="width:20%">Institute Name</th>

                                        <th style="width:8%">Province</th>
                                        <th style="width:8%">City</th>
                                        <th style="width:15%">Degree</th>
                                        <th style="width:5%"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                            <td class="align-center">*</td>
                                            <td><a href="/Home/UnivDetail/@s.Id">@s.Name</a></td>

                                            <td>@s.Province</td>
                                            <td>@s.City</td>
                                            <td>@s.Degree</td>

                                            <td>
                                                <form action="/Home/Apply/@s.Id">


                                                    <input type="submit" value="Apply" />

                                                </form>
                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>



                            <div style="clear: both"></div>
                        </div> <!-- End .module-table-body -->
                    </div> <!-- End .module -->

                </div> <!-- End .grid_12 -->
            </div>
            <div class="col-md-4">
                <div class="list-group">
                    <a class="list-group-item active"> Departments</a>
                    @foreach (string s in ViewBag.dept)
                    {
                        <a href="SearchDegree/?Degree=@s" class="list-group-item">@s</a>
                    }




                </div>
            </div>
            </div>
    </body>
}
</html>


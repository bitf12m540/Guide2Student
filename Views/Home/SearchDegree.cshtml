@{
    ViewBag.Title = "SearchDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Search</title>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/themes/base/minified/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>





</head>
@section SearchDegree
{
    <body>

        <div class="row">
            <div class="col-md-8">
                


                  
                        <h2><span>Universities </span></h2>

                        <div class="module-table-body">

                            <table id="myTable" class="tablesorter" border="1">
                                <thead>
                                    <tr>
                                        <th style="width:10%">
                                            Logo
                                        </th>
                                        <th style="width:20%">Institute Name</th>

                                        <th style="width:8%">Province</th>
                                        <th style="width:8%">City</th>
                                        <th style="width:15%">Degree</th>
                                        <th style="width:5%"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                            <td class="align-center"><img src="~/Content/themes/base/images/@s.Image" width="50" height="50" /></td>
                                            <td><a href="/Home/UnivDetail/@s.Id">@s.Name</a></td>

                                            <td>@s.Province</td>
                                            <td>@s.City</td>
                                            <td>@s.Degree</td>

                                            <td>
                                               
                                              
                                                <form action="/Home/Apply/@s.Id">

                                                   
                                                    <input type="submit" value="Apply" />

                                                </form>
                                                
                                                    
                                               


                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>



                            <div style="clear: both"></div>
                        </div>
                   

               
            </div>
            <div class="col-md-4">
                <div class="list-group">
                    <a class="list-group-item active"> Departments</a>
                    @foreach (string s in ViewBag.dept)
                    {
                        <a href="/Home/SearchDegree/?degree=@s" class="list-group-item">@s</a>
                    }




                </div>
            </div>

        </div>

    </body>
}
</html>

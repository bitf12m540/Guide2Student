@{
    Layout = null;
}
@model bootStrapExample.Models.University
<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/themes/base/minified/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>


<body>

   
    <div>

        <nav class="navbar navbar-inverse  ">

            <div class="navbar-header navbar-left ">
                <a class="navbar-brand " >University Panel</a>
            </div>
            <div>
                <ul class="nav  navbar-nav navbar-left">

                    <li><a href="/Univ/UnivHome">Home</a></li>
                    <li><a href="/Univ/Update/@ViewBag.Id">Edit</a></li>
                    <li><a href="/Univ/Inbox">Inbox</a></li>
                    <li><a href="/Univ/Applicants">Applicants</a></li>

                </ul>
            </div>
            <div class="navbar-form navbar-right">
                <a class="navbar-brand " href="/Univ/Logout">Log Out</a>
            </div>


        </nav>
        @using (Html.BeginForm("UpdateConfirm", "Univ"))
{


    
        @Html.LabelFor(m => m.Name)<br />
        @Html.EditorFor(m => m.Name) <br /><br />
    
        @Html.LabelFor(m => m.Description)<br />
        @Html.TextAreaFor(m => m.Description)    <br /><br />

        @Html.LabelFor(m => m.Degree)<br />
        @Html.EditorFor(m => m.Degree)    <br /><br />
           


        <label>Merit-1</label><br /><input type="number" name="Merit1"  value=@Model.Merit1 > <br /><br />

        <label>Merit-2</label><br /><input type="number" name="Merit2"  value=@Model.Merit2 > <br /><br />
        
    
                <input type="hidden" name="Id"     value=@Model.Id >
                <input type="hidden" name="Email"  value=@Model.Email >
                <input type="hidden" name="City"   value=@Model.City >
                <input type="hidden" name="Province"  value=@Model.Province >
                <input type="hidden" name="Image"  value=@Model.Image >
                <input type="hidden" name="Form"  value=@Model.Form >

           
          
            
            <br /><br />    <input type="submit" class="btn btn-success" value="Save & Update">
            


        }
        
    </div>
</body>
    
</html>

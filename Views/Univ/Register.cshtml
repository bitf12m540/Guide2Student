@{
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>


<body>
    <nav class="navbar navbar-inverse  ">

        <div class="navbar-header navbar-left ">
            <a class="navbar-brand " >University Panel</a>
        </div>

        

    </nav>

    <div id="contact-page" class="container">
        <div class="bg">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="title text-center">University Information</h2>
                    <div id="gmap" class="contact-map">
                    </div>
                </div>
            </div>
           
      
            @*@using (Html.BeginForm("Up", "Univ")) {*@ 
      
            <form action="/Univ/Up" method="post" enctype="multipart/form-data">

                <div class="form-group col-md-6">
                    <input type="text" name="Name" required="required" placeholder="Name">
                </div>
                <div class="form-group col-md-6">
                    <input type="email" name="Email" required="required" placeholder="Email">
                </div>

                <div class="form-group col-md-7">
                    <input type="text" name="Degree" required="required" placeholder="Degrees Offered Seperated by Comma i.e eg IT,LLB,etc..."><br />
                </div>
                <div class="form-group col-md-4">
                    <input type="number" name="Merit1" required="required" placeholder="Previous Merits 1">
                </div>
                <div class="form-group col-md-4">
                    <input type="number" name="Merit2" required="required" placeholder="Previous Merits 2">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" name="Province" required="required" placeholder="Province">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" name="City" required="required" placeholder="city">
                </div>


                <div class="form-group col-md-12">
                    <textarea name="Description" required="required" class="form-control" rows="8" placeholder="Your Decription Here"></textarea>
                </div>
                <input type="hidden" name="Form" value="NULL" />

                <div class="form-group col-md-12">
                    Upload Image: <input type="file" name="image" />

                </div>
                @*<div class="form-group col-md-12">
                Upload Form: <input type="file" name="image" />

            </div>*@
                <div class="form-group col-md-12">
                    <input type="submit" class="btn btn-primary pull-right" value="Submit">
                </div>


            </form>
</div>
    </div>
</body>
    
</html>
